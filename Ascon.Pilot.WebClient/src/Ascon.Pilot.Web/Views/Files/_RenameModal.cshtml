<div class="modal fade" id="renameModal" tabindex="-1" role="dialog" aria-labelledby="renameModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="renameModalLabel"><span class="glyphicon glyphicon-pencil"></span>&nbsp;Переименовать</h4>
            </div>
            <form id="renameForm" action="@Url.Action("Rename", "Files")" method="POST">
                @Html.Hidden("renameRootId")
                @Html.Hidden("idToRename")
                <div class="modal-body">
                    <div class="form-group">
                        @Html.Label("oldName", "Текущее имя", new { @class = "control-label" })
                        @Html.TextBox("oldName", "", new { @class = "form-control", placeholder = "Введите новое имя", disabled="disabled" })
                    </div>
                    <div class="form-group">
                        @Html.Label("newName", "Новое имя", new {@class = "control-label"})
                        @Html.TextBox("newName", "", new {@class = "form-control", placeholder = "Введите новое имя"})
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Сохранить</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Закрыть</button>
                </div>
            </form>
        </div>
    </div>
</div>

