@using Ascon.Pilot.Web
@model Ascon.Pilot.Web.ViewModels.FileViewModel
@{
    var name = Model.Name;
}

<div class="col-lg-2 col-md-3 col-sm-3 col-xs-12 file-card" data-id="@Model.ObjectId" data-name="@Model.Name" onclick="processCardClick(this)">
    <div class="file-card-icon">
        <div class="center-block">
            <img src="@Url.Action("GetTypeIcon", "Home", new {id = Model.ObjectTypeId})" alt="@Model.Name"/>
        </div>
        <input name="objectsIds" type="checkbox" value="@Model.ObjectId" onclick="processCheckboxClick(this);event.cancelBubble=true;"/>
    </div>
    <div class="file-card-name">
        <a href="@Url.Action("Index", "Files", new {id = Model.ObjectId, isSource = Model.ObjectTypeId == ApplicationConst.SourcefolderTypeid || ViewBag.IsSource })">@name</a>
    </div>
</div>